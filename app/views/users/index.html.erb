<div class="container">
	<div class="row">
		<div class="col">
			<% content_for(:title, 'All Users') %>
			<h1 class="mt-3">Users</h1>
		</div>
	</div>
	<div class="row">
		<div class="col">
			<table class="table text-center">
				<thead class="bg-secondary text-white">
					<tr>
						<th scope="col">First Name</th>
						<th scope="col">Last Name</th>
						<th scope="col">Link</th>
					</tr>
				</thead>
				<tbody class="">
					<% @users.each do |user| %>
							<tr>
								<th scope="row"><%= user.fname %></th>
								<td><%= user.lname %></td>
								<td><%= link_to "View Profile", user, class: "btn btn-sm btn-primary"%></td>
								<br>
							</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>